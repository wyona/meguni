<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>WhoKnows?</display-name>
  <description>WhoKnows?</description>

  <servlet>
    <servlet-name>SearchServlet</servlet-name>
    <servlet-class>org.wyona.meguni.servlet.SearchServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SearchServlet</servlet-name>
    <url-pattern>/search-and-results</url-pattern>
  </servlet-mapping>

  <listener>
    <listener-class>org.wyona.meguni.servlet.SessionLogger</listener-class>
  </listener>
</web-app>
